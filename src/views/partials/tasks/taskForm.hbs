      <input
        class="form-control rounded-0 bg-dark text-white"
        name="plantel_egreso"
        cols="80"
        required="true"
        placeholder="Escribe tu plantel de egreso"
       />
     </div>

      <div class="mb-3">
      <label for="correo">20.Correo</label>
      <input
