<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Llena el formulario</h3>
  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">1.Escribe tu matricula:</label>
      <input
        id="title"
        class="form-control rounded-0 bg-dark text-white"
        type="text"
        name="title"
        placeholder="Matricula"
        autofocus
        required="true"
      />
    </div>

   <div class="mb-3">
      <label for="nombre">2.Nombre</label>
      <input
        class="form-control rounded-0 bg-dark text-white"
        name="nombre"
        cols="80"
        required="true"
        placeholder="Escribe tu nombre"
      />
    </div>

    <div class="mb-3">
      <label for="apellido_paterno">3.Apellido Paterno</label>
      <input
        class="form-control rounded-0 bg-dark text-white"
        name="apellido_paterno"
        cols="80"
        required="true"
        placeholder="Escribe tu apellido Paterno"
     />
    </div>

      <div class="mb-3">
      <label for="apellido_matern">3.Apellido Materno</label>
      <input
        class="form-control rounded-0 bg-dark text-white"
        name="apellido_matern"
        cols="80"
        required="true"
        placeholder="Escribe tu apellido Materno"
     />
    </div>

       <form action="/upload" method="post" enctype="multipart/form-data">
